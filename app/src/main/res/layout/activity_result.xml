<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context="com.android.quizzapp.ResultActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/standardmrgn"
        android:fontFamily="casual"
        android:gravity="center"
        tools:text="Result Will Be Shown Here"
        android:textColor="@android:color/holo_red_dark"
        android:textSize="@dimen/results" />

    <Button
        android:id="@+id/restart_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/result"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/red"
        android:onClick="restartQuiz"
        android:text="@string/restart_quiz"
        android:textColor="@color/white" />

</RelativeLayout>
